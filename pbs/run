domname=$(hostname --domain)
case "${domname}" in
    *scrim.psu.edu )
        QCMD="qsub -q default"
    ;;

    *.aci.ics.psu.edu )
       #QCMD="qsub -q open"
        QCMD="qsub -A kzk10_collab"
    ;;

    * )
        QCMD="qsub"
    ;;
esac

submit() {
    for job; do
        echo eval "${QCMD}" "${job}"
    done
}

submit_priors() {
    iter=${1}
    script=${2}
    prior=${3}

    submit "${script}_eval_prior=\"${prior}\";nbatch=${iter}"
}

submit_scripts() {
    iter=${1}
    script=${2}

    submit_priors $1 $2 uniform
    submit_priors $1 $2 beta
    submit_priors $1 $2 normal
}

submit_runs() {
    iter=${1}

    submit_scripts ${1} pri
    submit_scripts ${1} inst
}

#submit kelsey

submit_runs 5e5
#submit_runs 2e6
#submit_runs 5e6
