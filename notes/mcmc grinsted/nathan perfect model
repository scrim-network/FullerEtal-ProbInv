load("~/runs/grinassim")
source('grinassim.R')
grinConfigPerfectModel(truth="mode")
grinRunAssim(nbatch=100000,initial=T)
grinRunAssim(nbatch=100000)
grinRunAssim()
save.image("~/runs/maxassim")
grinRunPredict()
save.image("~/runs/prmax")

source('pdfplot.R')
source('predict.R')
pdfplot(assimctx=grinassimctx, truth=T, caption="Posterior PDFs for Perfect Model from Mean", outfiles=T)
prqplot(prctx=prgrinctx, shade=F, xmax=2100, caption="Hindcast for Perfect Model from Mean", outfiles=T)

pdfplot(assimctx=grinassimctx, truth=T, caption="Posterior PDFs for Perfect Model from Mode", outfiles=T)
prqplot(prctx=prgrinctx, shade=F, xmax=2100, caption="Hindcast for Perfect Model from Mode", outfiles=T)

pdfplot(assimctx=grinassimctx, truth=T, caption="Posterior PDFs for Perfect Model from Maximum Likelihood", outfiles=T)
prqplot(prctx=prgrinctx, shade=F, xmax=2100, caption="Hindcast for Perfect Model from Maximum Likelihood", outfiles=T)

pdfplot(assimctx=grinassimctx, truth=T, caption="Posterior PDFs for Perfect Model from Uniform Mean", outfiles=T)
prqplot(prctx=prgrinctx, shade=F, xmax=2100, caption="Hindcast for Perfect Model from Uniform Mean", outfiles=T)

pdfplot(assimctx=grinassimctx, truth=F, caption="Posterior PDFs for Grinsted from Instrumental", outfiles=T)
prqplot(prctx=prgrinctx, shade=F, xmax=2100, caption="Hindcast for Grinsted from Instrumental", outfiles=T)
