iid normal:
    spdiv=1
    grinConfigPerfectModel(uniform=T)
    grinRunAssim(nbatch=100000,initial=T);grinRunAssim (mult=.2)

    spdiv=2
    grinConfigPerfectModel (spdiv= 2)
    grinRunAssim(nbatch=50000, initial=T);grinRunAssim(nbatch=50000, mult=.1);grinRunAssim(mult=.1)

    # spdiv is now 4 (b/c we bootstrapped from 2)
    grinConfigPerfectModel (spdiv= 2)
    grinRunAssim(nbatch=50000, initial=T);grinRunAssim(nbatch=50000, mult=.05);grinRunAssim(mult=.05)

    grinConfigPerfectModel (spdiv= 10)
    grinRunAssim(nbatch=10000, initial=T);grinRunAssim(nbatch=10000, mult=.02);grinRunAssim(mult=.02)

    source('roblib.R');chainload("/nfs/tmp/runs/newperf/iidperf", oldnames=c("grinassimctx"), newnames=c("assim"))
    source('pdfplot.R');assimPdfPlot(subcaption="Perf. Model, IID Norm, Instrumental Temp", outfiles=T)

