foo <- list("foo", "bar")

> as.vector(foo)
[[1]]
[1] "foo"

[[2]]
[1] "bar"

> as.vector(foo, mode="character")
[1] "foo" "bar"

> unlist(foo)
[1] "foo" "bar"


named.c <- function(..., pos=parent.frame())
{
    varnames <- as.character(match.call(expand.dots=FALSE)$...)

    # as.vector did not work, but unlist did
    #vec <- unlist(mget(varnames, envir=pos, inherits=TRUE))
    #vec <- sapply(varnames, get, pos=pos)

    vec <- c(...)
    names(vec) <- varnames
    return(vec)
}
