get command line
    commandArgs(trailingOnly = F)
    commandArgs(trailingOnly = T)
    paste(commandArgs(), collapse=" "))

get environment
    Sys.getenv("PBS_JOBNAME")

get name of source file
    __FILE__ <- (function() { attr(body(sys.function()), "srcfile") })()$filename
    tau <- as.numeric(sub(".*tau([[:digit:]]+).*", "\\1", __FILE__))
